    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-handlebars": "^3.0.0",
    "googleapis": "27",
    "helmet": "^3.14.0",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.3.9",
    "multer": "^1.4.1",
    "nodemailer": "^4.7.0",
    "nodemailer-express-handlebars": "^3.0.0",
    "nodemailer-mailgun-transport": "^1.4.0",
    "url-parse": "^1.4.4",
    "winston": "^3.1.0",
